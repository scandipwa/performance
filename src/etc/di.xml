<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="ScandiPWA\Performance\Model\Resolver\Products\DataPostProcessor">
        <arguments>
            <argument name="processors" xsi:type="array">
                <item name="attributes" xsi:type="object">ScandiPWA\Performance\Model\Resolver\Products\DataPostProcessor\Attributes</item>
                <item name="images" xsi:type="object">ScandiPWA\Performance\Model\Resolver\Products\DataPostProcessor\Images</item>
            </argument>
        </arguments>
    </type>
    <type name="ScandiPWA\Performance\Model\Resolver\Products\CollectionPostProcessor">
        <arguments>
            <argument name="processors" xsi:type="array">
                <item name="media_gallery" xsi:type="object">ScandiPWA\Performance\Model\Resolver\Products\CollectionPostProcessor\MediaGallery</item>
                <item name="options" xsi:type="object">ScandiPWA\Performance\Model\Resolver\Products\CollectionPostProcessor\Options</item>
            </argument>
        </arguments>
    </type>
    <preference
        for="Magento\InventoryCatalog\Plugin\CatalogInventory\Model\ResourceModel\Stock\Status\AdaptAddIsInStockFilterToCollectionPlugin"
        type="ScandiPWA\Performance\Plugin\CatalogInventory\Model\ResourceModel\Stock\Status\AdaptAddIsInStockFilterToCollectionPlugin"/>

    <type name="ScandiPWA\Performance\Model\Inventory\AreProductsSalableConditionChain">
        <arguments>
            <argument name="conditions" xsi:type="array">
                <item name="stock_item_is_in_stock" xsi:type="array">
                    <item name="required" xsi:type="boolean">true</item>
                    <item name="object" xsi:type="object">
                        ScandiPWA\Performance\Model\Inventory\AreProductsSalableCondition\IsSetInStockStatusForCompositeProductsCondition
                    </item>
                </item>
                <item name="is_any_source_item_in_stock" xsi:type="array">
                    <item name="required" xsi:type="boolean">true</item>
                    <item name="object" xsi:type="object">
                        ScandiPWA\Performance\Model\Inventory\AreProductsSalableCondition\IsAnySourceItemInStockCondition
                    </item>
                </item>
                <item name="back_order" xsi:type="array">
                    <item name="sort_order" xsi:type="number">10</item>
                    <item name="object" xsi:type="object">
                        ScandiPWA\Performance\Model\Inventory\AreProductsSalableCondition\BackOrderCondition
                    </item>
                </item>
                <item name="manage_stock" xsi:type="array">
                    <item name="sort_order" xsi:type="number">20</item>
                    <item name="object" xsi:type="object">
                        ScandiPWA\Performance\Model\Inventory\AreProductsSalableCondition\ManageStockCondition
                    </item>
                </item>
                <item name="is_salable_with_reservations" xsi:type="array">
                    <item name="sort_order" xsi:type="number">30</item>
                    <item name="object" xsi:type="object">
                        ScandiPWA\Performance\Model\Inventory\AreProductsSalableCondition\AreSalableWithReservationsCondition
                    </item>
                </item>
            </argument>
        </arguments>
    </type>

    <preference for="ScandiPWA\Performance\Api\Inventory\GetStockItemsConfigurationsInterface"
                type="ScandiPWA\Performance\Model\Inventory\GetStockItemsConfigurations"/>
    <preference for="ScandiPWA\Performance\Api\Inventory\AreProductsAssignedToStockInterface"
                type="ScandiPWA\Performance\Model\Inventory\AreProductsAssignedToStock"/>
    <preference for="ScandiPWA\Performance\Api\Inventory\GetStockItemsDataInterface"
                type="ScandiPWA\Performance\Model\Inventory\GetStockItemsData"/>
    <preference for="ScandiPWA\Performance\Api\Inventory\GetReservationsQuantitiesInterface"
                type="ScandiPWA\Performance\Model\Inventory\GetReservationsQuantities"/>
</config>
